<h1>My Cart</h1>
<div>
	<% @line_items.each do |line_item| %><br>
		<li><%= line_item.product.name %></li>
		<li><%= money(line_item.product.price) %></li>
		<li>Qty: <%= line_item.quantity %></li>
		<li>Subtotal: <%= money(line_item.line_item_total)%> </li>
	<% end %><br>
</div>

<div>
	<%= link_to "Proceed to Checkout", checkout_path, class: "btn btn-danger" %>
</div>