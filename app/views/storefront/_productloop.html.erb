<div class="row">
	<% @products.each do |product| %>
		<div class="col-md-4">
			<div class="well">
				<% if product.image.url.nil? == false %>
					<center><p><%= image_tag product.image.url, size: 250 %></p></center>
				<% end %>
				<p>
					<a href="" data-toggle="modal" data-target="#myModal_<%= product.id %>">
						<span class="glyphicon glyphicon-plus"></span>Quick Info
					</a>
				</p>
				<h3><%= link_to product.name, product %></h3>
				<p><%= money(product.price) %></p>
				<p><%= product.description %></p>
				<p><i>Made by: <%=product.brand%></i></p>
			</div>	
		</div>
		<!-- modal code start  -->
		<div class="modal fade" id="myModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Quick Info - <%= product.name %></h4>
		      </div>
		      <div class="modal-body">
		        <% if product.image.url.nil? == false %>
					<center><p><%= image_tag product.image.url, size: 350 %></p></center>
				<% end %>
				<h3><%= link_to product.name, product %></h3>
				<p><%= money(product.price) %></p>
				<p><%= product.description %></p>
				<p><i>Made by: <%=product.brand%></i></p>
		      </div>
		      <div class="modal-footer">
		        <p>
		        	<%= form_tag add_to_cart_path do %>
		        		<%= hidden_field_tag :product_id, product.id %>
		        		<%= number_field_tag :quantity, 1, placeholder: "How many?" %>
		        		<%= submit_tag "Add to Cart", class: "btn btn-sm btn-danger" %>
		        	<% end %>
		        </p>
		      </div>
		    </div>
		  </div>
		</div>
		<!-- modal code end -->
	<% end %>
	
</div>

